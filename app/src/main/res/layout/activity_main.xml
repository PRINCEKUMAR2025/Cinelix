<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:background="@drawable/background_inpu_newt"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_video_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_input"
            android:hint="Enter your post title here"
            android:drawableStart="@drawable/edit"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:autoText="true"
            />

        <VideoView
            android:id="@+id/videoview_main"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/black"/>

        <ProgressBar
            android:id="@+id/progressBar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary"
            android:visibility="invisible"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/addvideo"
            android:layout_gravity="center"
            android:onClick="ChooseVideo"
            android:clickable="true"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Post Video"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/button_upload_main"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@drawable/buttons"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Post"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/lavander_background"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:background="@drawable/video"
            android:layout_gravity="center"
            android:onClick="ShowVideo"
            android:clickable="true"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Videos"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="15dp"/>



        <ImageButton
            android:id="@+id/logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:src="@drawable/power"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:clickable="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="15dp"/>

    </LinearLayout>

</LinearLayout>